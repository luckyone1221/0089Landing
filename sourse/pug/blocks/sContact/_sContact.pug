mixin sContact()
	// start sContact
	+b.SECTION.sContact.section.fadeIn.wow(data-wow-duration='.4s' data-wow-delay='.3s')#sContact&attributes(attributes)
		+e.container.container
			.row.gx-0
				+e.col--left.col-lg-auto.d-none.d-lg-block
					+e.map
						| <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A4f0d71c80cd9bbdf93b6320596810bf0172a994cf2f7d3770db67644d39babae&amp;width=500&amp;height=400&amp;lang=ru_RU&amp;scroll=false"></script>
				+e.col--right.col
					+b.section-title
						h2 КОНТАКТЫ
					+e.items
						+e.item
							+e.icon-wrap
								+icon('loc')
							+e.txt Нижний Новгород, пр. Ленина, 51/11
						+e.map.d-lg-none
							| <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A4f0d71c80cd9bbdf93b6320596810bf0172a994cf2f7d3770db67644d39babae&amp;width=500&amp;height=400&amp;lang=ru_RU&amp;scroll=false"></script>
						+sContactItem('tell', 'tel:+78312301010', '+7 (831) 230 10 10')
						+sContactItem('soc-wa', 'whatsapp://send?abid=+79503431010', '+7 950 343 10 10')
						+sContactItem('soc-vb', 'viber://chat?number=+79503431010', '+7 950 343 10 10')
						+sContactItem('soc-mail', 'mailto:nnreklama@mail.ru', 'nnreklama@mail.ru')
					+soc()
	// end sContact

mixin sContactItem(icon, href, txt)
	+e.item(href=href)
		+e.icon-wrap
			+icon(icon)
		+e.txt=txt
